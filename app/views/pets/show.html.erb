<style>

ul {
  padding: 5px
}

li {
  list-style-type: none
}

.pet_info {
  text-align: center
}

</style>

<div class="pet_info">

  <ul>
    <h1><%= @pet.name %></h1>
    <img src="<%= @pet.image %>" width= "300px" height= "300px">
      <li>Description: <%= @pet.description %>
      <li>Age: <%= @pet.approximate_age %>
      <li>Sex: <%= @pet.sex %>
      <li>Adoption Status: <%= @pet.adoption_status %>
  </ul>

  <li><%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %></li>
  <% if @pet.adoption_status == "Adoptable" %>
    <%= link_to "Change to Adoption Pending", "/pets/#{@pet.id}/pending", method: :patch %>
  <% else %>
    <%= link_to "Change to Adoptable", "/pets/#{@pet.id}/adoptable", method: :patch %>
  <% end %>
  <li><%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %></li>

</div>
