<h2><%= @application.name %>'s Application </h2>
<section class="applicant_info">
  <li>Name: <%= @application.name %></li>
  <li>Address: <%= @application.address %></li>
  <li>City: <%= @application.city %></li>
  <li>State: <%= @application.state %></li>
  <li>Zip: <%= @application.zip %></li>
  <li>Phone Number: <%= @application.phone_number %></li>
  <li>Description: <%= @application.description %></li>
  <li>Pets Applied for: </li><% @application.pets.each do |pet| %>
    <section id="pet_application_<%= pet.id %>">
      <%= link_to pet.name, "/pets/#{pet.id}" %>
      - <%= link_to "Approve Application", pet_application_path(pet, app_id: @application), method: :patch%><br>
    </section>
  <% end %>
</section>
