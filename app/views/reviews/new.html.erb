<h1>Add New Review</h1>

<%= form_tag "/shelters/#{@shelter.id}/reviews" do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %><br>
  <%= label_tag :rating %>
  <%= text_field_tag :rating %><br>
  <%= label_tag :content %>
  <%= text_field_tag :content %><br>
  <%= label_tag :picture %>
  <%= text_field_tag :picture %><br>
  <%= submit_tag "Submit Review" %>
<% end %>

<br><h5><%= link_to "Go Back", :back %></h5>
