<style>

ul {
  list-style-type: none;
  padding: 25px;
}

.edit {
  color: white;
}

</style>


<h1><%= @shelter.name %> - Our Pets (<%= @shelter.pets.count %>)</h1>
<a href="/shelters/<%= @shelter.id %>/pets/new">Create Pet</a>

<% @shelter.pets.each do |pet| %>
  <ul>
    <img src="<%= pet.image %>" width="150" height="150" align="left"><br>
    <li>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}" %></li>
    <li>Sex: <%= pet.sex %></li>
    <li>Approximate Age: <%= pet.approximate_age %></li><br>
    <li class="edit"><%= link_to "Update Pet", "/pets/#{pet.id}/edit", method: :get %>
    <li class="edit"><%= link_to "Delete Pet", "/shelters/#{@shelter.id}/pets/#{pet.id}", method: :delete %>
  </ul>
<% end %>
